<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".mypage.Mypage_ProfileEdit_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="25dp"
        android:paddingEnd="20dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/profile_edit_backbtniv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mypage_backbtn"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="프로필 수정"
            android:textColor="@color/black"
            android:fontFamily="@font/freesentation_8extrabold"
            android:textSize="18sp"
            android:layout_marginLeft="10dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/profile_edit_iconiv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/mypage_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="94dp" />

    <FrameLayout
        android:id="@+id/nickname_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_edit_iconiv"
        android:layout_marginTop="30dp">

        <ImageView
            android:id="@+id/profile_edit_nameboxiv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/profile_edit_namebox"/>

        <EditText
            android:id="@+id/profile_edit_nameet"
            android:layout_width="250dp"
            android:layout_height="42dp"
            android:hint="닉네임"
            android:textSize="14sp"
            android:fontFamily="@font/freesentation_6semibold"
            android:background="@null"
            android:layout_marginStart="15dp"/>

        <ImageView
            android:id="@+id/profile_edit_xbtniv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/profile_edit_xbtn"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="285dp"/>

    </FrameLayout>



    <ImageView
        android:id="@+id/profile_edit_nicknamebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/profile_edit_nicknamebtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nickname_box"
        android:layout_marginTop="33dp" />






</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".mypage.Mypage_ProfileEdit_Activity">

    <ImageView
        android:id="@+id/profile_edit_backbtniv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/mypage_backbtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="프로필 수정"
        android:fontFamily="@font/freesentation_6semibold"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/profile_edit_backbtniv"
        app:layout_constraintTop_toTopOf="@id/profile_edit_backbtniv"
        app:layout_constraintBottom_toBottomOf="@id/profile_edit_backbtniv"
        android:layout_marginLeft="10dp" />

    <ImageView
        android:id="@+id/profile_edit_iconiv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/mypage_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="94dp" />

    <ImageView
        android:id="@+id/profile_edit_nameboxiv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/profile_edit_namebox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_edit_iconiv"
        android:layout_marginTop="30dp" />

    <ImageView
        android:id="@+id/profile_edit_xbtniv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/profile_edit_xbtn"
        app:layout_constraintTop_toTopOf="@id/profile_edit_nameboxiv"
        app:layout_constraintBottom_toBottomOf="@id/profile_edit_nameboxiv"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="37dp" />
    
    <EditText
        android:id="@+id/profile_edit_nameet"
        android:layout_width="250dp"
        android:layout_height="42dp"
        app:layout_constraintTop_toTopOf="@id/profile_edit_nameboxiv"
        app:layout_constraintBottom_toBottomOf="@id/profile_edit_nameboxiv"
        app:layout_constraintStart_toStartOf="@id/profile_edit_nameboxiv"
        android:layout_marginLeft="10dp"
        android:hint="닉네임"
        android:background="@null"/>

    <ImageView
        android:id="@+id/profile_edit_nicknamebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/profile_edit_nicknamebtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_edit_nameboxiv"
        android:layout_marginTop="33dp" />






</androidx.constraintlayout.widget.ConstraintLayout>
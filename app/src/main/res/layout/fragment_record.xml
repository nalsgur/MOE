<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".DetailActivity">

    <LinearLayout
        android:id="@+id/top_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="25dp"
        android:paddingEnd="20dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/search_left_arrow"
            android:contentDescription="@string/detail_back_btn"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="기록하기"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:letterSpacing="0.018"
            android:fontFamily="@font/freesentation_8extrabold"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/searchIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/search_search"
            android:contentDescription="@string/searchIcon"/>

        <ImageView
            android:id="@+id/profileIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/profile"
            android:layout_marginLeft="10dp"/>


    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:scrollbars="none"
        android:layout_marginBottom="50dp"
        app:layout_constraintTop_toBottomOf="@id/top_ll"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/detail_img"
                android:layout_width="240dp"
                android:layout_height="287dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/detail_image"
                android:layout_marginTop="25dp"
                android:layout_marginHorizontal="60dp"
                android:contentDescription="@string/detail_image"/>

            <TextView
                android:id="@+id/detail_title"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/detail_img"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="기안84 제2회 개인전 : 奇案島(기안도; 기묘한 섬) floating on SEOUL"
                android:textSize="16sp"
                android:fontFamily="@font/freesentation_6semibold"
                android:textColor="@color/black"
                android:lineHeight="18.7sp"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="24.02.15 ~ 24.02.29"
                android:textSize="14sp"
                android:fontFamily="@font/freesentation_4regular"
                android:textColor="@color/black"
                android:lineHeight="16.37sp"
                app:layout_constraintTop_toBottomOf="@id/detail_title"
                app:layout_constraintStart_toStartOf="@id/detail_title"
                android:layout_marginTop="10dp"/>

            <ImageView
                android:id="@+id/add_image_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/add_image_btn"
                android:src="@drawable/record_bg"
                app:layout_constraintTop_toBottomOf="@id/date_tv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사진 추가하기+"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:fontFamily="@font/freesentation_4regular"
                android:lineHeight="17.54sp"
                android:letterSpacing="0.1"
                app:layout_constraintTop_toTopOf="@id/add_image_btn"
                app:layout_constraintBottom_toBottomOf="@id/add_image_btn"
                app:layout_constraintStart_toStartOf="@id/add_image_btn"
                app:layout_constraintEnd_toEndOf="@id/add_image_btn"/>

            <ImageView
                android:id="@+id/record_img1"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="475dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/record_img2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="475dp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/record_img1"/>

            <ImageView
                android:id="@+id/record_img3"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="475dp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/record_img2"/>

            <ImageView
                android:id="@+id/record_img4"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="475dp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/record_img3"/>

            <ImageView
                android:id="@+id/record_img5"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginHorizontal="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/record_img1" />

            <ImageView
                android:id="@+id/record_img6"
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintTop_toBottomOf="@id/record_img2"
                app:layout_constraintStart_toEndOf="@id/record_img5"/>

            <ImageView
                android:id="@+id/record_img7"
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintTop_toBottomOf="@id/record_img3"
                app:layout_constraintStart_toEndOf="@id/record_img6"/>

            <ImageView
                android:id="@+id/record_img8"
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintTop_toBottomOf="@id/record_img4"
                app:layout_constraintStart_toEndOf="@id/record_img7"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
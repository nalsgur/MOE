<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/bg_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/record_alert_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/record_alert_icon"
        android:layout_marginTop="19dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/ask_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="기록하시겠습니까?"
        android:textSize="14sp"
        android:fontFamily="@font/freesentation_7bold"
        android:textColor="@color/white"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="기록하실려면 티켓표를 찍어주세요!"
        android:textSize="12sp"
        android:fontFamily="@font/freesentation_6semibold"
        android:textColor="@color/white"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/ask_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
        android:id="@+id/no_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/record_alert_no_btn"
        app:layout_constraintTop_toBottomOf="@id/bg_iv"
        app:layout_constraintStart_toStartOf="@id/bg_iv"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아니오"
        android:textColor="@color/black"
        android:fontFamily="@font/freesentation_6semibold"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="@id/no_btn"
        app:layout_constraintStart_toStartOf="@id/no_btn"
        app:layout_constraintEnd_toEndOf="@id/no_btn"
        app:layout_constraintBottom_toBottomOf="@id/no_btn"/>
    <ImageView
        android:id="@+id/yes_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/record_alert_yes_btn"
        app:layout_constraintTop_toBottomOf="@id/bg_iv"
        app:layout_constraintStart_toEndOf="@id/no_btn"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="네"
        android:textColor="@color/black"
        android:fontFamily="@font/freesentation_6semibold"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="@id/yes_btn"
        app:layout_constraintStart_toStartOf="@id/yes_btn"
        app:layout_constraintEnd_toEndOf="@id/yes_btn"
        app:layout_constraintBottom_toBottomOf="@id/yes_btn"/>
</androidx.constraintlayout.widget.ConstraintLayout>
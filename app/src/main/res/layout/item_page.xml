<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/index"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/page_bg"
        android:layout_width="56dp"
        android:layout_height="27dp"
        android:src="@drawable/page_tab_selector"
        app:layout_constraintTop_toTopOf="@id/page_tv"
        app:layout_constraintEnd_toEndOf="@id/page_tv"
        app:layout_constraintBottom_toBottomOf="@id/page_tv"
        app:layout_constraintStart_toStartOf="@id/page_tv"/>
    <TextView
        android:id="@+id/page_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:fontFamily="@font/freesentation_7bold"
        android:lineHeight="21sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>
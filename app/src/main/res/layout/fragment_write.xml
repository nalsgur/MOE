<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/top_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="15dp"
        android:paddingHorizontal="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/detail_back_btn"
            android:src="@drawable/search_left_arrow" />
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:scrollbars="none"
        android:layout_marginBottom="50dp"
        app:layout_constraintTop_toBottomOf="@id/top_ll"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">
            <ImageView
                android:id="@+id/write_image"
                android:layout_width="350dp"
                android:layout_height="400dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="25dp"/>
            <ImageView
                android:id="@+id/write_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/write_bg"
                app:layout_constraintTop_toBottomOf="@id/write_image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="20dp"/>

            <EditText
                android:id="@+id/write_edit_text"
                android:layout_width="360dp"
                android:layout_height="107dp"
                android:hint="글을 입력해주세요!"
                android:gravity="top"
                android:paddingTop="15dp"
                android:paddingStart="16dp"
                android:textColor="#606060"
                android:background="@null"
                android:fontFamily="@font/freesentation_6semibold"
                app:layout_constraintTop_toBottomOf="@id/write_image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="20dp" />

            <android.widget.Button
                android:id="@+id/write_end_btn"
                android:layout_width="55dp"
                android:layout_height="30dp"
                android:text="완료"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/navy"
                android:enabled="false"
                android:fontFamily="@font/freesentation_6semibold"
                android:background="@drawable/write_end_bg_default"
                app:layout_constraintTop_toBottomOf="@id/write_text"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"/>

<!--            <TextView-->
<!--                android:id="@+id/write_end_tx"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="완료"-->
<!--                android:textColor="@color/navy"-->
<!--                android:textSize="15sp"-->
<!--                android:fontFamily="@font/freesentation_6semibold"-->
<!--                android:lineHeight="17.54sp"-->
<!--                android:letterSpacing="0.1"-->
<!--                app:layout_constraintTop_toTopOf="@+id/write_end_btn"-->
<!--                app:layout_constraintBottom_toBottomOf="@+id/write_end_btn"-->
<!--                app:layout_constraintStart_toStartOf="@+id/write_end_btn"-->
<!--                app:layout_constraintEnd_toEndOf="@+id/write_end_btn"/>-->

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                app:layout_constraintTop_toBottomOf="@+id/write_end_btn"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="25dp"
                android:layout_marginTop="30dp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                app:layout_constraintTop_toBottomOf="@+id/write_end_btn"
                app:layout_constraintStart_toEndOf="@id/imageView1"
                android:layout_marginTop="30dp" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                app:layout_constraintTop_toBottomOf="@+id/write_end_btn"
                app:layout_constraintStart_toEndOf="@id/imageView2"
                android:layout_marginTop="30dp" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                app:layout_constraintTop_toBottomOf="@+id/write_end_btn"
                app:layout_constraintStart_toEndOf="@id/imageView3"
                android:layout_marginTop="30dp" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                app:layout_constraintTop_toBottomOf="@+id/write_end_btn"
                app:layout_constraintStart_toEndOf="@id/imageView4"
                android:layout_marginTop="30dp" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                app:layout_constraintTop_toBottomOf="@+id/write_end_btn"
                app:layout_constraintStart_toEndOf="@id/imageView5"
                android:layout_marginTop="30dp" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                app:layout_constraintTop_toBottomOf="@+id/write_end_btn"
                app:layout_constraintStart_toEndOf="@id/imageView6"
                android:layout_marginTop="30dp"/>

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                app:layout_constraintTop_toBottomOf="@+id/write_end_btn"
                app:layout_constraintStart_toEndOf="@id/imageView7"
                android:layout_marginTop="30dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>